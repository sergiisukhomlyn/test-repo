  "item": [
    {
      "name": "200 OK test",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));\r",
              "\r",
              "pm.test(\"Response has image\", () => {\r",
              "    const json = pm.response.json();\r",
              "    pm.expect(json).to.be.an('array').that.is.not.empty;\r",
              "    pm.expect(json[0]).to.have.property('id');\r",
              "    pm.environment.set(\"image_id\", json[0].id);\r",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/images/search?limit=1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "images",
            "search"
          ],
          "query": [
            {
              "key": "limit",
              "value": "1"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Add image",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200 or 201\", () => {\r",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);\r",
              "});\r",
              "\r",
              "const json = pm.response.json();\r",
              "pm.expect(json).to.have.property('id');\r",
              "pm.environment.set(\"favourite_id\", json.id);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const favourite_id = pm.environment.get(\"favourite_id\");\r",
              "if (favourite_id) {\r",
              "    pm.sendRequest({\r",
              "        url: `https://api.thecatapi.com/v1/favourites/${favourite_id}`,\r",
              "        method: 'DELETE',\r",
              "        header: {\r",
              "            'x-api-key': pm.environment.get(\"api_key\")\r",
              "        }\r",
              "    }, function (err, res) {\r",
              "        console.log(\"Deleted old favourite:\", favourite_id);\r",
              "    });\r",
              "}"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n  \"image_id\": \"{{image_id}}\",\r\n  \"sub_id\": \"test_user_{{$timestamp}}\"\r\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/favourites",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "favourites"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Image is in list",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));\r",
              "const json = pm.response.json();\r",
              "console.log(json);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "protocolProfileBehavior": {
        "disableBodyPruning": true
      },
      "request": {
        "method": "GET",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n  \"image_id\": \"{{image_id}}\",\r\n  \"sub_id\": \"{{sub_id}}\"\r\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/favourites?sub_id={{sub_id}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "favourites"
          ],
          "query": [
            {
              "key": "sub_id",
              "value": "{{sub_id}}"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Vote for image",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200 or 201\", () => pm.expect(pm.response.code).to.be.oneOf([200,201]));\r",
              "const json = pm.response.json();\r",
              "pm.expect(json).to.have.property('id');\r",
              "pm.environment.set(\"vote_id\", json.id);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n  \"image_id\": \"{{image_id}}\",\r\n  \"sub_id\": \"test_user\",\r\n  \"value\": 1\r\n}",
