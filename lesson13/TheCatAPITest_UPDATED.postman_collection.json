    {
      "name": "Vote is registered",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));\r",
              "const json = pm.response.json();\r",
              "const ids = json.map(v => v.image_id);\r",
              "pm.expect(ids).to.include(pm.environment.get(\"image_id\"));"
            ],
