          ]
        }
      }
    },
    {
      "name": "Vote value is correct",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
              "const json = pm.response.json();",
              "const vote = json.find(v => v.id === parseInt(pm.environment.get('vote_id')));",
              "pm.expect(vote.value).to.eql(1);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/votes?sub_id=test_user",
          "host": [
