    {
      "name": "Get vote by ID",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
              "const json = pm.response.json();",
              "pm.expect(json).to.have.property('id', parseInt(pm.environment.get('vote_id')));",
              "pm.expect(json).to.have.property('image_id', pm.environment.get('image_id'));"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
