{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start with Nodemon (auto-stop)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/index.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "PORT": "3005"
      },
      "restartDelay": 1000,
      "skipFiles": ["<node_internals>/**"],
      "postDebugTask": "stop-nodemon"
    }
  ]
}