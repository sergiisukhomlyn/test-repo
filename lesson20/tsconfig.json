{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",                // Это должно быть установлено, если ты используешь абсолютные пути
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
